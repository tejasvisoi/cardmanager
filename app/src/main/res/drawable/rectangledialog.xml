<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <layer-list>
            <!-- SHADOW -->
            <item>
                <shape>
                    <stroke android:color="@color/cardview_shadow_start_color"
                        android:width="1.5dp"
                        />

                    <corners android:radius="2dp"/>

                </shape>
            </item>
            <!-- BUTTON -->
            <item android:bottom="5px">
                <shape>

                    android:color="#fff"
                    <corners
                        android:radius="19dp"/>
                    <padding
                        android:left="5dp"
                        android:top="5dp"
                        android:right="5dp"
                        android:bottom="5dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>